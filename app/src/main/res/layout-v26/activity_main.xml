<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_border"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtValorConta"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="@string/valor_conta"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt10Perc"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/_10"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/edtValorConta"
        app:layout_constraintTop_toBottomOf="@+id/edtValorConta" />

    <TextView
        android:id="@+id/txt20Perc"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/_20"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/txt15Perc"
        app:layout_constraintTop_toBottomOf="@+id/edtValorConta" />

    <TextView
        android:id="@+id/txt15Perc"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/_15"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/txt10Perc"
        app:layout_constraintTop_toBottomOf="@+id/edtValorConta" />

    <EditText
        android:id="@+id/edtValorConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/_0_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtValorConta"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <TextView
        android:id="@+id/txtGorjeta"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/gorjeta"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt10Perc" />

    <EditText
        android:id="@+id/edt10Perc"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/txt10Perc"
        app:layout_constraintTop_toBottomOf="@+id/txt10Perc"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edt15Perc"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/txt15Perc"
        app:layout_constraintTop_toBottomOf="@+id/txt15Perc"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edt20Perc"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/txt20Perc"
        app:layout_constraintTop_toBottomOf="@+id/txt20Perc"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edtTotal10P"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/edt10Perc"
        app:layout_constraintTop_toBottomOf="@+id/edt10Perc"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edtTotal20P"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/edt20Perc"
        app:layout_constraintTop_toBottomOf="@+id/edt20Perc"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edtTotal15P"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/edt15Perc"
        app:layout_constraintTop_toBottomOf="@+id/edt15Perc"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/txtTotalConta"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/total_conta"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtTotal10P" />

    <TextView
        android:id="@+id/txtGorjVaria"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/gorjeta_vari_vel"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gorjetaVariavel" />

    <SeekBar
        android:id="@+id/gorjetaVariavel"
        style="@android:style/Widget.SeekBar"
        android:layout_width="136dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="25"
        app:layout_constraintStart_toStartOf="@+id/edtTotal10P"
        app:layout_constraintTop_toBottomOf="@+id/edtTotal15P" />

    <TextView
        android:id="@+id/txtGorjetaVaria"
        android:layout_width="64dp"
        android:layout_height="36dp"
        android:text="@string/_25"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edtTotal20P"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtTotal20P"
        app:layout_constraintTop_toTopOf="@+id/gorjetaVariavel" />

    <TextView
        android:id="@+id/txtGorjetaVar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/gorjeta"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtGorjVar" />

    <EditText
        android:id="@+id/edtValContaVar"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/txtGorjetaVaria"
        app:layout_constraintTop_toBottomOf="@+id/txtGorjetaVaria"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edtGorjVar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/_0_0"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/gorjetaVariavel"
        app:layout_constraintTop_toBottomOf="@+id/gorjetaVariavel"
        android:autofillHints="" />
</androidx.constraintlayout.widget.ConstraintLayout>